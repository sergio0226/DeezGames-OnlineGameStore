@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Eliminar Conta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<body style="background-color:#212529">
<h3 class="text-white">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p class="text-white">A sua conta contém apenas os dados pessoais que nos forneceu. Esta página permite a eliminação da sua conta.</p>
        <p class="text-white">
            <strong>A eliminação da sua conta será permanente e impossibilatará a recuperação da mesma.</strong>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Remover Conta</a>
        </p>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
