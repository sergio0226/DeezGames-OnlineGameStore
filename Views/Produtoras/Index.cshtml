@model IEnumerable<lab4t1.Models.Produtora>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color:#212529">
    <h1 class="text-white" style="text-align:center">Lista de Produtoras</h1>
<br />

<div class="row text-white">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Morada)</th>

                        <th class="text-white">Ações</th>
                </tr>
            </thead>
        <tbody>

            @foreach (var item in Model) 
            {
            <tr class="text-center text-white">
                <td >
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Morada)
                </td>
                <td class="text-white" >    
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Editar </a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalhes </a> |
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Apagar </a>
                </td>
            </tr>
            }
        </tbody>
        </table>

    </div>
</div>  
</body>
@await Html.PartialAsync("_CreateItem", "Produtoras")