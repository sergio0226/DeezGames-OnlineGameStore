@model lab4t1.Models.Perfil

@{
    ViewData["Title"] = "Details";
}
<body style="background-color:#212529">
    <h1 class="text-white" style="text-align:center">Detalhes do Utilizador</h1>

    <div class="text-white">
    <h4>Perfil</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
    <div class="text-white text-center">
    <a class="text-white btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="text-white btn btn-secondary" asp-action="Index">Voltar à lista</a>

    </div>
    <br />
    <div class="text-white text-center">
            <h4>Alterar Funções</h4>
        <br />
        <form  method="post" asp-controller="Perfils" asp-action="ChangeRole">
            <input type="hidden" name="userId" value="@Model.UserID" />
            <select name="newRole">
                <option value="Admin">Administrador</option>
                <option value="Func">Funcionário</option>
                <option value="Client">Cliente</option>
            </select>
            
            <input class="btn btn-danger" type="submit" value="Alterar Função" />
        </form>
    </div>
</body>
